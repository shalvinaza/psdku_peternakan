<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/title_lulusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Profil Alumni"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/pre_lulusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_lulusan"
            android:layout_marginTop="15dp"
            android:background="@color/mainColor"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Profil dan Kompetensi Sarjana Peternakan mulai tahun 2014 dirumuskan berdasarkan pada Kepmendiknas No. 045/U/2002 tentang Kurikulum Inti Pendidikan Tinggi, Kesepakatan Forum Pimpinan Perguruan Tinggi Peternakan Indonesia tahun 2009 mengenai Profil dan Kompetensi Sarjana Peternakan, Perpres No. 8 Tahun 2012 tentang Kerangka Kualifikasi Nasional Indonesia/ KKNI/IQF dan UU No. 18 Tahun 2009 tentang Peternakan dan Kesehatan Hewan."
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="Profil lulusan Program Studi  Sarjana (S1) Ilmu Peternakan Fakultas Peternakan adalah sarjana yang memiliki profil sebagai (1) Knowledgeable and Skillful Worker (Pegawai Berpengetahuan dan Terampil), (2) Manager, dan (3) Entrepreneur. Berikut kompetensi yang harus dicapai untuk Lulusan Program Sarjana (S1):"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Knowledgeable and skillfull worker :"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:stretchColumns="1,2">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Menguasai  ipteks dan keterampilan dasar peternakan ramah lingkungan"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu menerapkan ipteks dasar peternakan ramah clingkungan"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu menganalisis, menginterpretasikan dan   mengkomunikasikan hasil  penelitian secara oral dan  verbal"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="4."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu memecahkan permasalahan di bidangnya"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="5."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu memanfaatkan dan menggunakan TIK (Teknologi Informasi dan Komunikasi)"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="6."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu mengikuti perkembangan Ipteks"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="7."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu bekerjasama dalam tim dan beradaptasi dengan lingkungan kerja"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Manager :"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:stretchColumns="1,2">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu menerapkan prinsip dasar manajemen"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu menerapkan prinsip dasar kepemimpinan"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu berkomunikasi secara efektif"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Enterpreneur :"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:stretchColumns="1,2">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Memiliki kemampuan  memotivasi, berkreasi dan berinovasi"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2."
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <TextView
                        android:maxWidth="250dp"
                        android:paddingLeft="10dp"
                        android:text="Mampu menerapkan kaidah entrepreneurship"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/title_testimoni"
            android:layout_below="@id/pre_lulusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Kata Alumni"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/alumnis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_testimoni"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/alumni_nurfadhillah"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="M. Nur Fadhilah Sandy\n\nProdi Peternakan Unpad PSDKU Pangandaran Angkatan 2017"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Program Studi Peternakan Unpad PSDKU Pangandaran merupakan tempat yang tepat buat meningkatkan skill khususnya di bidang peternakan karena kesempatan dan pengalaman terjun langsung ke lapangannya banyak banget. Lokasi kampusnya yang dekat sama destinasi wisata bikin enggak gampang bosen. Hal yang didapat selain ilmu dan teman baru, PSDKU tuh pas banget buat teman-teman yang mau mengabdikan diri ke masyarakat, melatih pola pikir agar lebih kritis untuk bisa memberikan manfaat bagi masyarakat sekitar. Kuliah di sini seru banget!!"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/alumi_ryan"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Ryan Chrisandi\n\nProdi Peternakan Unpad PSDKU Pangandaran Angkatan 2018"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Saya merasa terfasilitasi untuk berpikir kritis selama kuliah di PSDKU. Selain itu, suasana kekeluargaan yang terbangun di antara civitas akademika menjadikan saya nyaman untuk mengaktualisasikan segala potensi yang saya miliki. Dengan belajar di program studi peternakan, membuka wawasan saya bahwa potensi bidang peternakan di Indonesia cukup menjanjikan untuk dikembangkan."
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>